<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/missBTN"
        android:layout_width="167dp"
        android:layout_height="110dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="22dp"
        android:text="Miss"
        app:layout_constraintStart_toEndOf="@+id/shotBTN"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/assistBTN"
        android:layout_width="167dp"
        android:layout_height="110dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="26dp"
        android:text="Assist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shotBTN" />

    <Button
        android:id="@+id/stealBTN"
        android:layout_width="167dp"
        android:layout_height="110dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="26dp"
        android:text="Steal"
        app:layout_constraintStart_toEndOf="@+id/assistBTN"
        app:layout_constraintTop_toBottomOf="@+id/missBTN" />

    <Button
        android:id="@+id/shotBTN"
        android:layout_width="167dp"
        android:layout_height="110dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="26dp"
        android:text="Shot"
        app:layout_constraintBottom_toTopOf="@+id/assistBTN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>